<mvc:View controllerName="AGLCalendar.controller.Main" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified" xmlns:l="sap.ui.layout">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<VBox>
						<form:SimpleForm editable="true" layout="ResponsiveGridLayout">
							<form:content>
								<Label text="Select your project"/>
								<ComboBox id="idProjectSelect" placeholder="Development Work" selectedKey="{DropdownModel>/selectedProjectId}" selectionChange="onProjectChange" items="{ path: 'DropdownModel>/ProjectCollection' }">
									<core:Item key="{DropdownModel>ProjectId}" text="{DropdownModel>Name}"/>
									<layoutData>
										<l:GridData span="XL4 L4 M12 S12"/>
									</layoutData>
								</ComboBox>
								<Label text="Hours completed"/>
								<Input id="idHoursInput" value="">
									<layoutData>
										<l:GridData span="XL4 L4 M12 S12"/>
									</layoutData>
								</Input>
								<Label text="Hours remaining"/>
								<Text id="idProjectHoursRemain" text="{ parts:['DropdownModel>/ProjectCollection','DropdownModel>/selectedProjectId'],formatter:'.hoursRemainsFormatter' }">
									<layoutData>
										<l:GridData span="XL4 L4 M12 S12"/>
									</layoutData>
								</Text>
								</form:content>
							</form:SimpleForm>
							<u:Calendar id="calendar" width="100%" select="handleCalendarSelect" intervalSelection="true"/>
						</VBox>
					</content>
					<footer>
						<Toolbar>
							<Button id="idCopyButton" enabled="false" text="Copy" type="Emphasized" press="onCopyPress"/>
							<ToolbarSpacer/>
							<Button id="idSubmitButton" text="Submit" press="onSubmitPress" type="Accept" />
							<Button text="Cancel" />
						</Toolbar>
					</footer>
				</Page>
			</pages>
		</App>
	</mvc:View>