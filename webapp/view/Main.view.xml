<mvc:View controllerName="AGLCalendar.controller.Main" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified" xmlns:l="sap.ui.layout">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<VBox>
						<form:SimpleForm editable="true" layout="ResponsiveGridLayout">
							<form:content>
								<Label text="Select your project"/>
								<ComboBox id="idProjectSelect"  items="{ path: 'DropdownModel>/ProjectCollection' }">
									<core:Item key="{DropdownModel>ProjectId}" text="{DropdownModel>Name}"/>
									<layoutData>
										<l:GridData span="XL4 L4 M12 S12"/>
									</layoutData>
								</ComboBox>
								<Label text="Hours completed"/>
								<ComboBox id="idHoursSelect" items="{ path: 'DropdownModel>/Hours' }">
									<core:Item key="{DropdownModel>Key}" text="{DropdownModel>Value}"/>
									<layoutData>
										<l:GridData span="XL4 L4 M12 S12"/>
									</layoutData>
								</ComboBox>
								<Label text="Hours remaining"/>
								<Text text="80">
									<layoutData>
										<l:GridData span="XL4 L4 M12 S12"/>
									</layoutData>
								</Text>
								</form:content>
							</form:SimpleForm>
							<u:Calendar id="calendar" width="100%" select="handleCalendarSelect"/>
						</VBox>
					</content>
					<footer>
						<Toolbar>
							<Button text="Copy" type="Emphasized" />
							<ToolbarSpacer/>
							<Button text="Submit" press="onSubmitPress" type="Accept" />
							<Button text="Cancel" />
						</Toolbar>
					</footer>
				</Page>
			</pages>
		</App>
	</mvc:View>